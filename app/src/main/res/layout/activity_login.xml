<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greylight">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="401dp"
        android:layout_height="292dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="35dp"
        android:src="@drawable/ntwalo_icon">

    </ImageView>

    <TextView
        android:id="@+id/LoginText1"
        android:layout_width="162dp"
        android:layout_height="62dp"
        android:layout_below="@+id/imageView1"
        android:layout_marginStart="150dp"
        android:layout_marginTop="28dp"
        android:text="Login"
        android:textSize="32dp"
        android:textStyle="bold">

    </TextView>

    <EditText
        android:id="@+id/emailEt1"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_below="@id/LoginText1"
        android:hint="Enter your email address"
        android:inputType="textEmailAddress"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"/>

    <EditText
        android:id="@+id/passwordEt1"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_below="@id/emailEt1"
        android:hint="Enter your Password"
        android:inputType="textPassword"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"/>

    <Button
        android:id="@+id/LoginBtn1"
        android:layout_width="276dp"
        android:layout_height="85dp"
        android:layout_below="@id/passwordEt1"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/greylight"
        android:text="Login"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="224dp"
        android:layout_height="60dp"
        android:layout_below="@id/LoginBtn1"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp"
        android:paddingTop="16dp"
        android:text="Don't have an account?"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/SignUpTv1"
        android:layout_width="124dp"
        android:layout_height="52dp"
        android:layout_below="@+id/LoginBtn1"
        android:layout_alignEnd="@id/text1"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="-118dp"
        android:autoLink="web"
        android:text="Click here"
        android:textColorLink="@color/linkColor"
        android:textSize="20dp" />


</RelativeLayout>
